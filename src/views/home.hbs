{{#if user}}
    <div class="padre">
        <h2>Datos personales</h2>
            <div class="tabla">
                <div class="perfilPadre">
                    <div class="titulo">
                        <div class="user">
                                <h2 class="mail">Bienvenido {{user.nombre}}</h2>
                                <button onclick="location.href='/logout'" id="userBtn">
                                    <img class="logoutBtn" src="/cambiar.png" alt="">
                                </button>
                        </div>
                    </div>
                    <div class="cardPerfil">
                        <div class="circular">
                            <img class="avatarFoto" src={{user.avatar}} alt={{user.nombre}}>
                        </div>
                        <h3>Nombre: {{user.nombre}}</h3>
                        <h3>Apellido: {{user.apellido}}</h3>
                        <h3>Email: {{user.email}}</h3>
                        <h3>Dni: {{user.dni}}</h3>
                        <a href="/editPerfil/{{user.id}}">
                            <button class="userBtn">Editar informacion</button>
                        </a>
                        
                    </div>
                </div>
            </div>
        </div>
{{else}}
    <div class="ordenBotones">
        <h2 class="noHay">No hay datos</h2>       
    </div>
{{/if}}
